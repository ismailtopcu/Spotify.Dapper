<script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/3.5.1/chart.min.js"></script>

<canvas id="pieChart" width="1000" height="400"></canvas>

<script>
	document.addEventListener("DOMContentLoaded", function () {
		var ctx = document.getElementById('pieChart').getContext('2d');
		var labels = @Html.Raw(Json.Serialize(ViewBag.trackName));
		var data = @Html.Raw(Json.Serialize(ViewBag.danceability));

		var chartData = {
			labels: labels,
			datasets: [{
				data: data,
				backgroundColor: ['#AED6F1', '#A3E4D7', '#F5B7B1', '#F9E79F', '#D7BDE2', '#FAD7A0', '#D5DBDB', '#D2B4DE', '#F5CBA7', '#A2D9CE']
			}]
		};

		var myBarChart = new Chart(ctx, {
			type: 'pie',
			data: chartData,
			options: {
				title: {
					display: true,
					text: 'TOP 5 POPULER ŞARKININ DANS EDİLEBİLİRLİĞİ'
				}
			}
		});

	});
</script>
